<Window x:Class="ParfumerApp.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParfumerApp"
        mc:Ignorable="d"
        Title="Авторизация" MaxHeight="500" MaxWidth="500" MinHeight="350" MinWidth="350" Height="400" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock TextAlignment="Center" Text="Авторизация:" FontSize="24"/>
            <StackPanel>
                <TextBlock Text="Логин:"></TextBlock>
                <TextBox Name="txbLogin" Width="220"></TextBox>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Пароль:"></TextBlock>
                <TextBox Name="txbPassword" Width="220"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0" >
                <Button Name="btnLogin" Click="btnLogin_Click" Width="100" Content="Войти"></Button>
                <Button Name="btnCancel" Click="btnCancel_Click" Width="100" Content="Отмена" Margin="20,0,0,0" ></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
